<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/FUname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/MobileRe"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:hint="Your phone number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/BloodGroupRe"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your Blood Type"
        android:textSize="20dp"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Type:"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"

            />

        <Spinner
            android:id="@+id/BloodsRe"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:entries="@array/Bloods"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name:"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"

            />



        <Spinner
            android:id="@+id/HospitalNameUser"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <EditText
        android:id="@+id/NumberOfUniteRe"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Enter Number of Unites"
        android:textSize="20dp"
        android:inputType="number"


        />




    <Button
        android:id="@+id/RequestUser"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:onClick="Request"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Request"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</LinearLayout>