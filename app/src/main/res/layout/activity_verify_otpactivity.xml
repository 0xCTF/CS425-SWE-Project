<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Please enter the code that has been sent to your phone "
        android:textSize="22dp"
        android:textStyle="bold"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"


        >


        <EditText
            android:id="@+id/firstNumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#fffefb"
            android:gravity="center"
            android:hint="_"
            android:textColor="#b3b3a5"
            android:textSize="20dp"


            />

        <EditText
            android:id="@+id/secundNumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#fffefb"
            android:gravity="center"
            android:hint="_"
            android:textColor="#b3b3a5"
            android:textSize="20dp"


            />

        <EditText
            android:id="@+id/thirdNumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#fffefb"
            android:gravity="center"
            android:hint="_"
            android:textColor="#b3b3a5"
            android:textSize="20dp"


            />


        <EditText
            android:id="@+id/fourthNumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#fffefb"
            android:gravity="center"
            android:hint="_"
            android:textColor="#b3b3a5"
            android:textSize="20dp"


            />


    </LinearLayout>

    <Button
        android:id="@+id/virify"

        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"

        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:onClick="Virify"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Virify"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</LinearLayout>